<div id="app" class="container">
  <div class="nameArea">
    <i class="fas fa-map-marker"></i>
    Sushi
    {{nameArea}}
    brand
  </div>

  <div class="row">
    <div class="col-md-3">
      <div class="card menu">
        <div class="card-title">
          <i class="fas fa-utensils"></i>
          Menu
        </div>
        <div class="card-body">
         <hr>
          {{#each type}}
          <a href='/company/dish/byarea/{{MaKhuVuc}}?index={{Muc}}&page=1&limit=3' class="custom-link">
            <div class="type">{{Muc}}</div>
          </a>
          {{/each}}
        </div>
      </div>
      <h3>List branch of area:</h3>
      <div class="list-branchs">
        {{#each branchs}}

          <div class="branch">
            <a href="/company/dish/bybranch/{{MaChiNhanh}}?areaID={{KhuVuc}}&page=1&limit=3" >{{TenChiNhanh}}</a>
          </div>
          
        {{/each}}
      </div>
      
    </div>

    <div class="col-md-9">
      <div class="head-menu">
        <div class="title-menu-body">Sashimi combo</div>
        <div class="sort-menu-dish">Sort by Pricing</div>
        <div class="serving-status">Serving status</div>
      </div>

        <div class="listDish"> 
          
            {{#each dishes}}
              <div class="flex-dish">
                <div class="dish">

                  <div>
                    <h2>{{TenMonAn}}</h2>
                    <p>{{MoTa}}</p>
                    <p class ="price">Gi√°: {{GiaHienTai}}</p>
                  </div>
                
                  <div> <img src="{{HinhAnh}}" alt="{{TenMonAn}}" /></div>

                </div>

                <input  class="check-box-service" type="checkbox" id="check1">
                
              </div>
            {{/each}}
      </div>
    </div>
  </div>

 
    

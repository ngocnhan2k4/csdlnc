<div id="app">
    <h2>Chọn loại báo cáo</h2>

    <!-- Dropdown chọn loại báo cáo -->
    <div class="form-group">
        <label for="type">Choose type of revenue:</label>
        <select id="type" v-model="type" class="form-select">
            <option value="day">Day</option>
            <option value="month">Month</option>
            <option value="year">Year</option>
        </select>
    </div>

    <!-- Dropdown chọn chi nhánh -->
    <div class="form-group mt-3">
        <label for="branch">Branch:</label>
        <select id="branch" v-model="branch" class="form-select">
            <option value="0" selected>All</option>
            {{#each branches}}
            <option value="{{MaChiNhanh}}">{{TenChiNhanh}}</option>
            {{/each}}
        </select>
    </div>

    <!-- Nút gửi yêu cầu -->
    <button @click="fetchRevenueByType" class="btn btn-primary">
        Xem báo cáo
    </button>
</div>  
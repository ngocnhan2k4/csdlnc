<div id="app">
    <h2>Chọn loại báo cáo</h2>

    <!-- Dropdown chọn loại báo cáo -->
    <div class="form-group">
        <label for="type">Chọn loại:</label>
        <select v-model="selectedType" class="form-select">
            <option disabled value="">Chọn loại báo cáo</option>
            <option v-for="(type, index) in revenueTypes" :value="type" :key="index">
                {{ type }}
            </option>
        </select>
    </div>

    <!-- Dropdown chọn chi nhánh -->
    <div class="form-group">
        <label for="branch">Chọn chi nhánh:</label>
        <select v-model="selectedBranch" class="form-select">
            <option disabled value="">Chọn chi nhánh</option>
            <option v-for="(branch, index) in branch" :value="branch.TenChiNhanh" :key="index">
                {{ branch.TenChiNhanh }}
            </option>
        </select>

        </select>
    </div>

    <!-- Nút gửi yêu cầu -->
    <button @click="fetchRevenueByType" class="btn btn-primary">
        Xem báo cáo
    </button>
</div>  